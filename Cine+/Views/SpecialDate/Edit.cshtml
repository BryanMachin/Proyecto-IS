@model SpecialDate

<div class="margin mx-auto card text-dark bg-light mb-3" style="max-width: 40rem;">
    <div class="card-header text-dark">Edit Special Date</div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="SpecialDateID" />
            <div class=" form-group">
                <label asp-for="Name"> </label>
                <div><span asp-validation-for="Name" class="text-primary"></span></div>
                <input asp-for="Name" autocomplete="off" class="form-control" />
            </div>
            <div class=" form-group">
                <label asp-for="Date"> </label>
                <div><span asp-validation-for="Date" class="text-primary"></span></div>
                 <input type="date" asp-for="Date" class="form-control" min="2021-01-01" max="2031-01-01"/>
            </div>

            <div class="form-group">
                <label asp-for="DiscountRate"> </label>
                <div><span asp-validation-for="DiscountRate" class="text-primary"></span></div>
                <input asp-for="DiscountRate" min="0" max="100" class="form-control" />
            </div>

            <div class="margin text-center">
                <button class="btn btn-info" type="submit"> Save </button>
                <a asp-action="Index" class="btn btn-dark">  Cancel </a>
            </div>
        </form>

    </div>
</div>