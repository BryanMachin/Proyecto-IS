@model PayTicketsViewModel
@{
    Layout = "_LayoutClientPurchasing";
}

<div class="margin mx-auto card text-white bg-light mb-3" style="height: 90%; width:90%">
    <div class="card-header text-dark">Pay tickets</div>
    <div class="card-body d-xxl-table-row">

        <form asp-action="CalculateImport" method="post">
            <input type="hidden" asp-for="ClientID" />
            <input type="hidden" asp-for="MovieID" />
            <input type="hidden" asp-for="RoomID" />
            <input type="hidden" asp-for="ShiftID" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Tickets" />
            <input type="hidden" asp-for="SpecialUserID" />
            <input type="hidden" asp-for="payWithPoints" />
            <input type="hidden" asp-for="MoneyImport" />
            <input type="hidden" asp-for="PointsImport" />
            <input type="hidden" asp-for="CreditCardID" />
            <input type="hidden" asp-for="MembershipID" />

            <fieldset class="form-group text-black-50">
                <legend class="mt-4">How do you wish to pay?</legend>
                <div class="form-check">
                    @Html.RadioButtonFor(model => model.payWithPoints, false)
                    @Html.Label("Credit")

                </div>
                <div class="form-check">
                    @Html.RadioButtonFor(model => model.payWithPoints, true)
                    @Html.Label("Membership points")
                </div>
            </fieldset>
            }
            <div class="margin text-center">
                <button class="btn btn-info" type="submit"> Next </button>
                <a asp-action="Billboard" class="btn btn-dark">  Cancel </a>
            </div>
        </form>
    </div>
</div>


