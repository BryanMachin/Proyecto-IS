@model Movie

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MovieID" />
    <div class="form-group">
        <label asp-for="Title"> </label>
        <div><span asp-validation-for="Title" class="text-danger"></span></div>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Nationality"> </label>
        <div><span asp-validation-for="Nationality" class="text-danger"></span></div>
        <input asp-for="Nationality" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Synopsis"> </label>
        <div><span asp-validation-for="Synopsis" class="text-danger"></span></div>
        <input asp-for="Synopsis" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Rating"> </label>
        <div><span asp-validation-for="Rating" class="text-danger"></span></div>
        <input asp-for="Rating" type ="number" min="0" max="10" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit"> Save </button>
        <a asp-action="Index" class="btn btn-secondary">  Cancel </a>
    </div>


</form>