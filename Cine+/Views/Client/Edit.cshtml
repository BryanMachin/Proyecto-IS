@model Client

    <div class="margin mx-auto card text-white bg-danger mb-3" style="max-width: 20rem;">
        <div class="card-header">Edit Client</div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="ClientID" />
                <div class="form-group">
                    <label asp-for="Name"> </label>
                    <div><span asp-validation-for="Name" class="text-danger"></span></div>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="LastName"> </label>
                    <div><span asp-validation-for="LastName" class="text-danger"></span></div>
                    <input asp-for="LastName" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="IdentityNumber"> </label>
                    <div><span asp-validation-for="IdentityNumber" class="text-danger"></span></div>
                    <input asp-for="IdentityNumber" class="form-control" />
                </div>


                <div class="margin text-center">
                    <button class="btn btn-dark" type="submit"> Save </button>
                    <a asp-action="Index" class="btn btn-warning">  Cancel </a>
                </div>


            </form>

        </div>
    </div>