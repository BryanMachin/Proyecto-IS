@model Client

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ClientID" />
    <div class="form-group">
        <label asp-for="Name"> </label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"> </label>
        <div><span asp-validation-for="LastName" class="text-danger"></span></div>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="IdentityNumber"> </label>
        <div><span asp-validation-for="IdentityNumber" class="text-danger"></span></div>
        <input asp-for="IdentityNumber" class="form-control" />
    </div>
    

    <div class="text-center">
        <button class="btn btn-primary" type="submit"> Save </button>
        <a asp-action="Index" class="btn btn-secondary">  Cancel </a>
    </div>


</form>
