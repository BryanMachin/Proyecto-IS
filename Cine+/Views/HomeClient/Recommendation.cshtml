@model List<Movie>
@{
    Layout = "_LayoutClient";
}

<div id=table>
    <table class="table my-2 text-center table-light">
        <tr>
            <th>Title</th>
            <th>Nationality</th>
            <th>Genre</th>
            <th>Rating</th>
            <th>Synopsis</th>
            <th></th>
        </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td valign="middle"> @i.Title </td>
                <td valign="middle"> @i.Nationality </td>
                <td valign="middle"> @i.GenreName </td>
                <td valign="middle"> @i.Rating </td>
                <td valign="middle"> @i.Synopsis </td>
                <td valign="middle" class="text-center">
                    <a asp-controller="Purchase"  asp-action="MovieDates" class="btn btn-sm btn-success" asp-route-MovieID="@i.MovieID">See offers</a>
                </td>
            </tr>
        }
    </table>
</div>

<div id="add" class="text-center">
    <a asp-action="Index" class="btn btn-info">
        Back
    </a>
</div>

